<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.VBox?>

<?import greboreda.agendafx.components.personinput.PersonInput?>
<?import greboreda.agendafx.components.personoutput.PersonsOutput?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="greboreda.agendafx.controllers.MainController">
  <MenuBar VBox.vgrow="NEVER">
    <Menu mnemonicParsing="false" text="File">
      <MenuItem mnemonicParsing="false" text="Open…"/>
      <Menu mnemonicParsing="false" text="Open Recent"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Preferences…"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Quit"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <MenuItem mnemonicParsing="false" text="About agendafx"/>
    </Menu>
  </MenuBar>
  <VBox>
    <VBox.margin>
      <Insets left="10.0" right="10.0" top="10.0"/>
    </VBox.margin>
    <PersonsOutput fx:id="personsOutput"/>
    <PersonInput fx:id="personInput" onSavePerson="#onSavePerson"/>
  </VBox>
</VBox>
